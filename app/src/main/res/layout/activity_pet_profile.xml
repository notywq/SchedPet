<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pet_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mobidev.carmelalouise.schedpet.page.PetProfileActivity">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/iv_icon"
        android:id="@+id/tv_profile_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:text="Species: "
        android:layout_below="@id/tv_profile_name"
        android:id="@+id/tv_species"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:text="Breed: "
        android:layout_below="@id/tv_species"
        android:id="@+id/tv_breed"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Birthday: "
        android:textSize="20dp"
        android:layout_below="@id/tv_breed"
        android:id="@+id/tv_birthday"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/tv_birthday"
        android:id="@+id/tv_description"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/tv_description"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_edit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/button_edit"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_delete"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointments"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_delete"
        android:id="@+id/button_appointments"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaccines"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_appointments"
        android:id="@+id/button_vaccines"/>

</RelativeLayout>
